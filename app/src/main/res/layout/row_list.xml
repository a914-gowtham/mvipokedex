<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="UseCompoundDrawables,ContentDescription">

    <data>

        <import type="com.gowtham.mvisample.R" />

        <variable
            name="passenger"
            type="com.gowtham.mvisample.models.Passenger" />
    </data>

    <LinearLayout
        style="@style/LView"
        android:gravity="center_vertical"
        android:padding="8dp">

        <ImageView
            android:src="@color/black"
            imageUrl="@{passenger.airline==null ? passenger.airlines[0].logo : passenger.airline.logo}"
            placeHolder="@{R.drawable.ic_launcher_background}"
            android:layout_width="90dp"
            android:layout_height="50dp" />

        <LinearLayout
            style="@style/LWView"
            android:padding="6dp">

            <TextView
                android:id="@+id/txt_name"
                style="@style/WView"
                android:text="@{passenger.name}"
                android:textSize="18sp" />

            <LinearLayout
                style="@style/LView"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_flight_take_off" />

                <TextView
                    android:id="@+id/txt_from"
                    style="@style/WView"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="@{passenger.airline==null ? passenger.airlines[0].country : passenger.airline.country}" />
            </LinearLayout>


            <LinearLayout
                style="@style/LView"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_flight_land" />

                <TextView
                    android:id="@+id/txt_to"
                    style="@style/WView"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="@{passenger.airline==null ? passenger.airlines[0].headQuarters : passenger.airline.headQuarters}" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</layout>

